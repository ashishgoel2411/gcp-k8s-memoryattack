pipeline {
    agent none

    stages {
        stage('Memory Attack') {
            agent any
            steps {
                script {
                   sh 'kubectl cp induce_memory.sh tomcat-deployment-6fc96dd55f-5ndj5:/tmp/ -n tomcat-ns'
                   sh '''
                       kubectl exec tomcat-deployment-6fc96dd55f-5ndj5 -n tomcat-ns -- bash /tmp/induce_memory.sh
                       if ["$?" == "1"]; then exit 0; else exit 1; fi
	               '''
                }
            }
        }
    }
}